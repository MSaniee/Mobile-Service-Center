<h3>Receipts</h3>
@page "/Receipts"
@using ServiceCenter.Website.Components
@using ServiceCenter.Website.Components.Receipts

<div class="row">
    <div class="col-md-10">
        <Search OnSearchChanged="SearchChanged"/>
    </div>
    <div class="col-md-10">
        <Sort OnSortChanged="SortChanged" />
    </div>
    <div class="col-md-2">
        <a href="/createReceipt">Create Receipt</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <ReceiptTable Receipts="ReceiptList" OnDeleted="DeleteReceipt" />
    </div>
</div>
<div class="row">
    <div class="col">
        <Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage" />
    </div>
</div>