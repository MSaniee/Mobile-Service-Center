@page "/SendActivationCode"

<h3>Send Activation Code</h3>

@if (ShowRegistrationErrors)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in Errors)
        {
            <p>@error</p>
        }
    </div>
}

<EditForm Model="_phoneNumber" OnValidSubmit="Register" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="email" class="col-md-2 col-form-label">PhoneNumber:</label>
        <div class="col-md-10">
            <InputText id="phoneNumber" class="form-control" @bind-Value="_phoneNumber" />
            <ValidationMessage For="@(() => _phoneNumber)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Send Code</button>
        </div>
    </div>
</EditForm>
