@page "/registrOrLogin"

<h3>Registr Or Login</h3>

@if (ShowRegistrationErrors)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in Errors)
        {
            <p>@error</p>
        }
    </div>
}

<EditForm Model="_userLoginDto" OnValidSubmit="Register" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="email" class="col-md-2 col-form-label">PhoneNumber:</label>
        <div class="col-md-10">
            <InputText id="phoneNumber" class="form-control" @bind-Value="_userLoginDto.PhoneNumber" />
            <ValidationMessage For="@(() => _userLoginDto.PhoneNumber)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Code:</label>
        <div class="col-md-10">
            <InputNumber  id="code" class="form-control" @bind-Value="_userLoginDto.Code" />
            <ValidationMessage For="@(() => _userLoginDto.Code)" />
        </div>
    </div>
    <br/>
    <br/>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Register Or Login</button>
        </div>
    </div>
    <NavLink class="nav-link" href="SendActivationCode">
        <span class="oi oi-list-rich" aria-hidden="true"></span> Send Activation Code
    </NavLink>
</EditForm>
